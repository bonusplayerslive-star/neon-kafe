<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Neon Kafe | Admin Kontrol</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <style>
        /* Sizin mevcut neon temalÄ± CSS kodlarÄ±nÄ±z */
        .siparis-item { transition: all 0.3s ease; border-left: 4px solid #00f3ff; margin-bottom: 10px; }
        .teslim-edildi { opacity: 0.5; border-left-color: #00ff00; text-decoration: line-through; }
        .dolu { box-shadow: 0 0 15px #00f3ff !important; border: 1px solid #00f3ff !important; }
    </style>
</head>
<body class="bg-dark text-white">

    <div class="container-fluid p-4">
        <div class="row g-3">
            <div class="col-md-3">
                <div class="neon-card p-3">
                    <small class="text-info">GÃœNLÃœK CÄ°RO</small>
                    <h2 id="toplamCiro">0.00 TL</h2>
                </div>
            </div>
            <div class="col text-end">
                <button class="btn btn-outline-danger" onclick="gunuKapat()">GÃœNÃœ KAPAT</button>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-3">
                <h3>DEPO</h3>
                <div id="urunListesi">
                    <% urunler.forEach(urun => { %>
                        <div class="neon-card p-2 mb-2">
                            <span><%= urun.ad %></span> - <strong><%= urun.stok %> Adet</strong>
                        </div>
                    <% }) %>
                </div>
            </div>

            <div class="col-md-5">
                <h3 class="text-center">ðŸ”¥ MUTFAK AKIÅžI</h3>
                <div id="siparis-konteynir" style="max-height: 80vh; overflow-y: auto;">
                    <% siparisler.forEach(s => { %>
                        <div class="neon-card siparis-item <%= s.durum === 'teslim_edildi' ? 'teslim-edildi' : '' %>" id="siparis-<%= s._id %>">
                            <div class="d-flex justify-content-between align-items-center p-2">
                                <div>
                                    <span class="badge bg-warning text-dark">MASA <%= s.masaNo %></span>
                                    <strong class="ms-2"><%= s.urunAd %></strong>
                                    <div class="small text-muted"><%= s.zaman %></div>
                                </div>
                                <% if(s.durum !== 'teslim_edildi') { %>
                                    <button class="btn btn-sm btn-success" onclick="teslimEt('<%= s._id %>')">TESLÄ°M ET</button>
                                <% } %>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>

            <div class="col-md-4">
                <h3 class="text-center">MASALAR</h3>
                <div class="row g-2" id="masaGrid">
                    <% for(let i=1; i<=24; i++) { %>
                        <div class="col-3">
                            <div class="neon-card text-center p-3 masa-kart" 
                                 id="masa-<%= i %>" 
                                 onclick="masaDetay('<%= i %>')">
                                <small>MASA</small>
                                <h4><%= i %></h4>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="adisyonModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content bg-dark border-info">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title" id="adisyonMasaNo">MASA ADÄ°SYON</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="adisyonIcerik"></div>
                <div class="modal-footer border-secondary">
                    <h4 id="adisyonToplam" class="me-auto text-info">0.00 TL</h4>
                    <button class="btn btn-info" id="btnHesapOnay">HESABI KAPAT</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Render 503 hatalarÄ±nÄ± aÅŸmak iÃ§in WebSocket Ã¶ncelikli baÄŸlantÄ±
        const socket = io({
            transports: ['websocket', 'polling'],
            reconnectionAttempts: 5
        });

        let adisyonModal;
        let seciliMasa = null;

        window.addEventListener('DOMContentLoaded', () => {
            adisyonModal = new bootstrap.Modal(document.getElementById('adisyonModal'));
        });

        // Yeni SipariÅŸ GeldiÄŸinde (Mutfak AkÄ±ÅŸÄ±na Ekleme)
        socket.on('yeniSiparisBildirimi', (s) => {
            console.log("SipariÅŸ geldi:", s);
            const liste = document.getElementById('siparis-konteynir');
            
            // EÄŸer sipariÅŸ zaten ekrandaysa (ID kontrolÃ¼) ekleme
            if (document.getElementById(`siparis-${s._id}`)) return;

            const div = document.createElement('div');
            div.className = "neon-card siparis-item animate__animated animate__backInDown";
            div.id = `siparis-${s._id}`;
            div.innerHTML = `
                <div class="d-flex justify-content-between align-items-center p-2">
                    <div>
                        <span class="badge bg-warning text-dark">MASA ${s.masaNo}</span>
                        <strong class="ms-2 text-white">${s.urunAd}</strong>
                        <div class="small text-muted">${s.zaman || 'Yeni'}</div>
                    </div>
                    <button class="btn btn-sm btn-success" onclick="teslimEt('${s._id}')">TESLÄ°M ET</button>
                </div>`;
            
            liste.insertAdjacentElement('afterbegin', div); // En Ã¼ste ekle
            document.getElementById(`masa-${s.masaNo}`)?.classList.add('dolu');
        });

        // Teslim Edildi OnayÄ±
        socket.on('siparis_teslim_onayi', (id) => {
            const kart = document.getElementById(`siparis-${id}`);
            if (kart) {
                kart.classList.add('teslim-edildi');
                kart.querySelector('button')?.remove();
            }
        });

        // Ciro GÃ¼ncelleme
        socket.on('rakamGuncelleme', (data) => {
            document.getElementById('toplamCiro').innerText = `${data.ciro.toFixed(2)} TL`;
        });

        // Masa DetayÄ± (Adisyon)
        socket.on('masa_detay_verisi', (data) => {
            seciliMasa = data.masaNo;
            const liste = document.getElementById('adisyonIcerik');
            let toplam = 0;
            
            liste.innerHTML = data.siparisler.map(s => {
                toplam += s.fiyat;
                return `<div class="d-flex justify-content-between border-bottom border-secondary mb-2">
                            <span>${s.urunAd}</span>
                            <span>${s.fiyat.toFixed(2)} TL</span>
                        </div>`;
            }).join('');
            
            document.getElementById('adisyonToplam').innerText = `${toplam.toFixed(2)} TL`;
            document.getElementById('adisyonMasaNo').innerText = `MASA ${data.masaNo} ADÄ°SYON`;
            adisyonModal.show();
        });

        // Fonksiyonlar
        function teslimEt(id) { socket.emit('siparis_teslim_edildi', id); }
        function masaDetay(masaNo) { socket.emit('masa_detay_iste', masaNo); }
        
        document.getElementById('btnHesapOnay').onclick = () => {
            if(confirm(`Masa ${seciliMasa} hesabÄ± kapatÄ±lacak?`)) {
                socket.emit('hesap_kapat', seciliMasa);
                adisyonModal.hide();
                document.getElementById(`masa-${seciliMasa}`).classList.remove('dolu');
            }
        };

        function gunuKapat() {
            if(confirm("TÃ¼m masalar temizlenecek ve raporlanacak. Emin misiniz?")) {
                socket.emit('gunu_kapat_onay');
            }
        }

        socket.on('ekrani_temizle', () => { location.reload(); });
    </script>
</body>
</html>