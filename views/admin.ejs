<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Neon Kafe | Admin Kontrol</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <style>
        :root { --neon: #00f3ff; --danger: #ff0055; --success: #00ff88; }
        body { background: #080808; color: white; font-family: 'Segoe UI', sans-serif; overflow-x: hidden; }
        
        .neon-card { 
            background: rgba(20, 20, 20, 0.9); 
            border: 1px solid #333; 
            border-radius: 12px; 
            box-shadow: 0 4px 15px rgba(0,0,0,0.5);
            transition: 0.3s;
        }

        /* Mutfak AkÄ±ÅŸÄ± KartlarÄ± */
        .siparis-item { 
            border-left: 5px solid var(--neon); 
            margin-bottom: 12px; 
            padding: 15px;
        }
        .siparis-item.teslim-edildi { 
            border-left-color: var(--success);
            opacity: 0.7;
            background: rgba(0, 255, 136, 0.05);
        }
        .siparis-item.teslim-edildi strong { text-decoration: line-through; color: #888; }

        /* Masa Grid */
        .masa-kart { cursor: pointer; border: 1px solid #222; }
        .masa-kart.dolu { 
            border-color: var(--neon); 
            box-shadow: inset 0 0 10px rgba(0, 243, 255, 0.2), 0 0 15px rgba(0, 243, 255, 0.2); 
        }

        #siparis-konteynir { height: 75vh; overflow-y: auto; padding-right: 10px; }
        #siparis-konteynir::-webkit-scrollbar { width: 5px; }
        #siparis-konteynir::-webkit-scrollbar-thumb { background: var(--neon); border-radius: 10px; }
    </style>
</head>
<body>

    <div class="container-fluid p-4">
        <div class="row mb-4 align-items-center">
            <div class="col-md-3">
                <div class="neon-card p-3 text-center">
                    <small class="text-muted d-block">GÃœNLÃœK CÄ°RO</small>
                    <h3 id="toplamCiro" class="text-info mb-0">0.00 TL</h3>
                </div>
            </div>
            <div class="col-md-6 text-center">
                <h1 class="display-6 fw-bold text-white">NEON <span class="text-info">MUTFAK</span></h1>
            </div>
            <div class="col-md-3 text-end">
                <button class="btn btn-outline-danger px-4" onclick="gunuKapat()">GÃœNÃœ KAPAT</button>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-2">
                <h5 class="text-muted mb-3">STOKLAR</h5>
                <div id="urunListesi">
                    <% urunler.forEach(urun => { %>
                        <div class="neon-card p-2 mb-2 small d-flex justify-content-between">
                            <span><%= urun.ad %></span>
                            <span class="<%= urun.stok < 10 ? 'text-danger' : 'text-success' %>"><%= urun.stok %></span>
                        </div>
                    <% }) %>
                </div>
            </div>

            <div class="col-md-5">
                <h5 class="text-center mb-3 text-info">ðŸ”¥ AKTÄ°F SÄ°PARÄ°ÅžLER</h5>
                <div id="siparis-konteynir">
                    <% siparisler.forEach(s => { %>
                        <div class="neon-card siparis-item animate__animated animate__fadeInLeft <%= s.durum === 'teslim_edildi' ? 'teslim-edildi' : '' %>" id="siparis-<%= s._id %>">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="badge bg-info text-dark">MASA <%= s.masaNo %></span>
                                    <strong class="ms-2 fs-5"><%= s.urunAd %></strong>
                                    <div class="text-muted small mt-1"><%= s.zaman %></div>
                                </div>
                                <div id="aksiyon-<%= s._id %>">
                                    <% if(s.durum === 'bekliyor') { %>
                                        <button class="btn btn-success btn-sm shadow-sm" onclick="teslimEt('<%= s._id %>')">TESLÄ°M ET</button>
                                    <% } else { %>
                                        <span class="text-success small">âœ” HazÄ±r</span>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>

            <div class="col-md-5">
                <h5 class="text-center mb-3 text-muted">MASA PLANI</h5>
                <div class="row g-2">
                    <% for(let i=1; i<=24; i++) { %>
                        <div class="col-3">
                            <div class="neon-card text-center p-3 masa-kart" id="masa-<%= i %>" onclick="masaDetay('<%= i %>')">
                                <div class="small text-muted">MASA</div>
                                <div class="h4 mb-0"><%= i %></div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade animate__animated animate__fadeIn" id="adisyonModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content bg-dark border-info shadow-lg">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title text-info" id="adisyonMasaNo">MASA ADÄ°SYON</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="adisyonIcerik"></div>
                <div class="modal-footer border-secondary">
                    <h3 id="adisyonToplam" class="me-auto text-success">0.00 TL</h3>
                    <button class="btn btn-info px-4 fw-bold" id="btnHesapOnay">HESABI KAPAT</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const socket = io({ transports: ['websocket', 'polling'] });
        let adisyonModal;
        let seciliMasa = null;

        window.addEventListener('DOMContentLoaded', () => {
            adisyonModal = new bootstrap.Modal(document.getElementById('adisyonModal'));
        });

        // Yeni SipariÅŸ GeldiÄŸinde (Mutfak AkÄ±ÅŸÄ±na En Ãœste Ekle)
        socket.on('yeniSiparisBildirimi', (s) => {
            const liste = document.getElementById('siparis-konteynir');
            if (document.getElementById(`siparis-${s._id}`)) return;

            const div = document.createElement('div');
            div.className = "neon-card siparis-item animate__animated animate__backInLeft";
            div.id = `siparis-${s._id}`;
            div.innerHTML = `
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <span class="badge bg-info text-dark">MASA ${s.masaNo}</span>
                        <strong class="ms-2 fs-5 text-white">${s.urunAd}</strong>
                        <div class="text-muted small mt-1">${s.zaman || 'Az Ã¶nce'}</div>
                    </div>
                    <div id="aksiyon-${s._id}">
                        <button class="btn btn-success btn-sm" onclick="teslimEt('${s._id}')">TESLÄ°M ET</button>
                    </div>
                </div>`;
            
            liste.insertAdjacentElement('afterbegin', div);
            document.getElementById(`masa-${s.masaNo}`)?.classList.add('dolu');
        });

        // Teslim Edildi OnayÄ± (KartÄ± silmez, sadece gÃ¶rseli gÃ¼nceller)
        socket.on('siparis_teslim_onayi', (id) => {
            const kart = document.getElementById(`siparis-${id}`);
            if (kart) {
                kart.classList.add('teslim-edildi');
                const aksiyon = document.getElementById(`aksiyon-${id}`);
                if(aksiyon) aksiyon.innerHTML = '<span class="text-success small">âœ” HazÄ±r</span>';
            }
        });

        // Ciro GÃ¼ncelleme
        socket.on('rakamGuncelleme', (data) => {
            document.getElementById('toplamCiro').innerText = `${data.ciro.toFixed(2)} TL`;
        });

        // Adisyon Verisi
        socket.on('masa_detay_verisi', (data) => {
            seciliMasa = data.masaNo;
            const liste = document.getElementById('adisyonIcerik');
            let toplam = 0;
            liste.innerHTML = data.siparisler.map(s => {
                toplam += s.fiyat;
                return `<div class="d-flex justify-content-between border-bottom border-secondary py-2">
                    <span>${s.urunAd} <small class="text-muted">(${s.durum === 'teslim_edildi' ? 'HazÄ±r' : 'Bekliyor'})</small></span>
                    <span class="text-info">${s.fiyat.toFixed(2)} TL</span>
                </div>`;
            }).join('');
            document.getElementById('adisyonToplam').innerText = `${toplam.toFixed(2)} TL`;
            document.getElementById('adisyonMasaNo').innerText = `MASA ${data.masaNo} ADÄ°SYON`;
            adisyonModal.show();
        });

        // Ä°ÅŸlemler
        function teslimEt(id) { 
            if(!id || id === 'undefined') return;
            socket.emit('siparis_teslim_edildi', id); 
        }
        
        function masaDetay(masaNo) { socket.emit('masa_detay_iste', masaNo); }

        document.getElementById('btnHesapOnay').onclick = () => {
            if(confirm(`Masa ${seciliMasa} Ã¶demesi alÄ±ndÄ± mÄ±?`)) {
                socket.emit('hesap_kapat', seciliMasa);
                adisyonModal.hide();
                // O masaya ait tÃ¼m kartlarÄ± mutfak akÄ±ÅŸÄ±ndan temizle
                document.querySelectorAll('.siparis-item').forEach(item => {
                    if(item.innerText.includes(`MASA ${seciliMasa}`)) item.remove();
                });
                document.getElementById(`masa-${seciliMasa}`).classList.remove('dolu');
            }
        };

        function gunuKapat() {
            if(confirm("TÃœM MASALAR KAPATILACAK! Emin misiniz?")) socket.emit('gunu_kapat_onay');
        }

        socket.on('ekrani_temizle', () => location.reload());
        socket.on('masa_sifirla', (m) => document.getElementById(`masa-${m}`)?.classList.remove('dolu'));

    </script>
</body>
</html>